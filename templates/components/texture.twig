<section class="py-40 md:pt-84 md:pb-80 border-t border-b border-black px-20">
    <div class="ads-container">
      {% for item in entry.textureBlock.all() %}
        
        <div class="w-fit mx-auto mb-40 md:mb-85">

          {% set img = item.blockTitle.one() %}
            <picture>
              <img src="{{ img.url }}" alt="{{ img.title }}" />
            </picture>
            <div class="w-fit mx-auto">
                <svg width="49" height="15" viewBox="0 0 49 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <line y1="-1.5" x2="26.8328" y2="-1.5" transform="matrix(0.894427 0.447214 -0.894427 0.447214 0 2)" stroke="#EE4021" stroke-width="3" />
                    <line y1="-1.5" x2="26.8328" y2="-1.5" transform="matrix(-0.894427 0.447214 -0.894427 -0.447214 46 1)" stroke="#EE4021" stroke-width="3" />
                </svg>
                <svg width="49" height="15" viewBox="0 0 49 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <line y1="-1.5" x2="26.8328" y2="-1.5" transform="matrix(0.894427 0.447214 -0.894427 0.447214 0 2)" stroke="#EE4021" stroke-width="3" />
                    <line y1="-1.5" x2="26.8328" y2="-1.5" transform="matrix(-0.894427 0.447214 -0.894427 -0.447214 46 1)" stroke="#EE4021" stroke-width="3" />
                </svg>
            </div>
        </div>
        <div class="grid md:grid-cols-2 gap-26">
          {{ item.blockBody }}
        </div>
      {% endfor %}
    </div>
</section>